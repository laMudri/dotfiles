module BridgeGo2
import Data.Fin
import Data.SortedSet

data Player = Black | White
Moku : Type
Moku = Maybe Player
Index : Type
Index = Fin 19
Point : Type
Point = (Index,Index)
Board : Type
Board = Point -> Moku
ErrorMessage : Type
ErrorMessage = String
record Chain : Type where
  MkChain : (player : Player) -> (points : SortedSet Point) -> Chain
data Result = Win Player Board
            | NoResult Player Board (SortedSet Chain)
            | Illegal Player Board ErrorMessage
