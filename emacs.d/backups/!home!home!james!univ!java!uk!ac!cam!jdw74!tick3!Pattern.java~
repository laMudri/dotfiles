        //      to determine the correct values.
        String[] parts = formatString.split(":");
        if (parts.length != 7)
            throw new ParseException("Incorrect pattern format", 0);

        name = parts[0];
        author = parts[1];
        width = parts[2];
        height = parts[3];
        startCol = parts[4];
        startRow = parts[5];
        cells = parts[6];
    }

