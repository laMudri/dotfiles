module Units
%default total

data UnitOfMeasure = Metre | Second | Kilogram
                   | Prod UnitOfMeasure UnitOfMeasure
                   | Pow Nat UnitOfMeasure

data Measure : UnitOfMeasure -> Type -> Type where
  MkMeasure : (u : UnitOfMeasure) -> a -> Measure u a

(+) : Measure u a -> Measure u a -> Measure u a
